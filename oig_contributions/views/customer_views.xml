<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend the existing res.partner form view -->
    <record id="view_oig_customer_form" model="ir.ui.view">
        <field name="name">oig.customer.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="OIG Contributions" modifiers="{'invisible': [('customer', '=', False)]}">
                    <group>
                        <field name="customer_code"/>
                        <field name="agent_id"/>
                        <field name="region_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extend the existing res.partner tree view -->
    <record id="view_oig_customer_tree" model="ir.ui.view">
        <field name="name">oig.customer.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="customer_code"/>
                <field name="agent_id"/>
                <field name="region_id"/>
            </field>
        </field>
    </record>

    <!-- Extend the existing res.partner search view -->
    <record id="view_oig_customer_search" model="ir.ui.view">
        <field name="name">oig.customer.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="customer_code"/>
                <field name="agent_id"/>
                <field name="region_id"/>
            </field>
            <filter name="group_country" position="after">
                <filter string="Agent" name="agent" domain="[]" context="{'group_by': 'agent_id'}"/>
                <filter string="Region" name="region" domain="[]" context="{'group_by': 'region_id'}"/>
            </filter>
        </field>
    </record>

    <!-- Action for OIG Customers -->
    <record id="action_oig_customer" model="ir.actions.act_window">
        <field name="name">OIG Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_customer': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first OIG customer!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_oig_customer"
              name="Customers"
              parent="menu_oig_root"
              action="action_oig_customer"
              sequence="20"/>
</odoo>
