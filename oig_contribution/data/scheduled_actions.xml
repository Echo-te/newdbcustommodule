<odoo>
    <data noupdate="1">
        <record id="ir_cron_process_commissions" model="ir.cron">
            <field name="name">Process Commissions</field>
            <field name="model_id" ref="model_oig_commission"/>
            <field name="state">code</field>
            <field name="code">model.process_commissions()</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field> <!-- Infinite -->
            <field name="nextcall" eval="(fields.Date.today() + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
