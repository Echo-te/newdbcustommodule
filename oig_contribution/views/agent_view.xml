<odoo>
    <record id="view_agent_form" model="ir.ui.view">
        <field name="name">oig.agent.form</field>
        <field name="model">oig.agent</field>
        <field name="arch" type="xml">
            <form string="Agent">
                <header>
                    <field name="agent_id" readonly="1"/>
                    <field name="performance_score" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="region_id"/>
                    </group>
                    <group string="Customers">
                        <field name="customer_ids" widget="one2many_list"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_agent_tree" model="ir.ui.view">
        <field name="name">oig.agent.tree</field>
        <field name="model">oig.agent</field>
        <field name="arch" type="xml">
            <tree string="Agents">
                <field name="name"/>
                <field name="region_id"/>
                <field name="performance_score"/>
            </tree>
        </field>
    </record>

    <record id="view_agent_kanban" model="ir.ui.view">
        <field name="name">oig.agent.kanban</field>
        <field name="model">oig.agent</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="region_id"/>
                <field name="performance_score"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <strong><field name="name"/></strong>
                            <div><field name="region_id"/></div>
                            <div>Performance: <field name="performance_score"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
