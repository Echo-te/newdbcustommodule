<!-- views/customer_view.xml -->
<record id="view_customer_form" model="ir.ui.view">
    <field name="name">oig.customer.form</field>
    <field name="model">oig.customer</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <!-- Add a button to manually process commissions -->
                <button name="process_commissions" type="object" string="Process Commissions" class="oe_highlight"/>
            </header>
            <sheet>
                <group>
                    <field name="customer_id"/>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="agent_id"/>
                    <field name="daily_contribution_amount"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="contributions_ids"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="view_customer_tree" model="ir.ui.view">
    <field name="name">oig.customer.tree</field>
    <field name="model">oig.customer</field>
    <field name="arch" type="xml">
        <tree>
            <field name="customer_id"/>
            <field name="name"/>
            <field name="phone"/>
            <field name="email"/>
            <field name="agent_id"/>
        </tree>
    </field>
</record>
