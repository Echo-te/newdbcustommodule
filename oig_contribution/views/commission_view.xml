<!-- views/commission_view.xml -->
<odoo>
    <record id="view_commission_form" model="ir.ui.view">
        <field name="name">oig.commission.form</field>
        <field name="model">oig.commission</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="customer_id"/>
                        <field name="agent_id"/>
                        <field name="contribution_id"/>
                        <field name="commission_amount"/>
                        <field name="commission_date"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_commission_tree" model="ir.ui.view">
        <field name="name">oig.commission.tree</field>
        <field name="model">oig.commission</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_id"/>
                <field name="agent_id"/>
                <field name="contribution_id"/>
                <field name="commission_amount"/>
                <field name="commission_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
</odoo>
