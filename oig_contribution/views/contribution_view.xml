<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for Contributions -->
    <record id="view_contribution_tree" model="ir.ui.view">
        <field name="name">oig.contribution.tree</field>
        <field name="model">oig.contribution</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_id"/>
                <field name="agent_id"/>
                <field name="service_id"/>
                <field name="day"/>
                <field name="amount"/>
                <field name="contribution_date"/>
                <field name="status"/>
                <field name="total_amount"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Contributions -->
    <record id="view_contribution_form" model="ir.ui.view">
        <field name="name">oig.contribution.form</field>
        <field name="model">oig.contribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="service_id"/>
                        <field name="customer_id" readonly="1"/>
                        <field name="agent_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="day"/>
                        <field name="amount"/>
                        <field name="contribution_date"/>
                        <field name="status"/>
                    </group>
                    <footer>
                        <button string="Process Commission" type="object" name="process_commission" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Contributions -->
    <record id="action_oig_contribution" model="ir.actions.act_window">
        <field name="name">Contributions</field>
        <field name="res_model">oig.contribution</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menuitem for Contributions -->
    <menuitem id="menu_oig_contribution_root" name="Contributions" parent="menu_oig_service_root" sequence="20"/>
    <menuitem id="menu_oig_contribution" name="Contributions" parent="menu_oig_contribution_root" action="action_oig_contribution"/>
</odoo>
