<odoo>
    <!-- Menu Item for Agents -->
    <menuitem id="menu_oig_agent" name="Agents" sequence="1" parent="menu_oig_root"/>

    <!-- Agent List View -->
    <record id="view_agent_tree" model="ir.ui.view">
        <field name="name">oig.agent.tree</field>
        <field name="model">oig.agent</field>
        <field name="arch" type="xml">
            <tree string="Agents">
                <field name="agent_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="region_id"/>
                <field name="total_customers"/>
            </tree>
        </field>
    </record>

    <!-- Agent Kanban View -->
    <record id="view_agent_kanban" model="ir.ui.view">
        <field name="name">oig.agent.kanban</field>
        <field name="model">oig.agent</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="image"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="region_id"/>
                <field name="total_customers"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_image">
                                <img t-if="record.image.raw_value" t-att-src="'data:image/png;base64,%s' % to_text(record.image.raw_value)"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="phone"/></div>
                                <div><field name="region_id"/></div>
                                <div>Total Customers: <field name="total_customers"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Agent Form View -->
    <record id="view_agent_form" model="ir.ui.view">
        <field name="name">oig.agent.form</field>
        <field name="model">oig.agent</field>
        <field name="arch" type="xml">
            <form string="Agent Form">
                <header>
                    <button name="action_view_customers" type="object" string="View Customers" class="oe_stat_button" icon="fa-users"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="agent_id" readonly="1"/>
                            <field name="name" required="1"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="region_id" required="1"/>
                            <field name="total_customers" readonly="1"/>
                            <field name="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to Open Agent Views -->
    <record id="action_oig_agent" model="ir.actions.act_window">
        <field name="name">Agents</field>
        <field name="res_model">oig.agent</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>
