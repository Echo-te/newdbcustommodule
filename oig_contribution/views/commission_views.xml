<odoo>
    <record id="view_commission_tree" model="ir.ui.view">
        <field name="name">oig.commission.tree</field>
        <field name="model">oig.commission</field>
        <field name="arch" type="xml">
            <tree>
                <field name="agent_id"/>
                <field name="service_id"/>
                <field name="commission_amount"/>
                <field name="income_account_id"/>
            </tree>
        </field>
    </record>

    <record id="view_commission_form" model="ir.ui.view">
        <field name="name">oig.commission.form</field>
        <field name="model">oig.commission</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="agent_id" required="1"/>
                        <field name="service_id" required="1"/>
                        <field name="commission_amount" required="1"/>
                        <field name="income_account_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
